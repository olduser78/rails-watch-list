<h1><%=@list.name%> - <%= pluralize(@list.movies.size, 'movie')%> </h1>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat"%>
<%@list.movies.each do |movie|%>
<h2><%= movie.title%></h2>
<p><%movie.bookmarks.each do |i|%><%= i.comment%><%end%></p>
<%= image_tag(movie.poster_url, size: '350x500')%>
<p><%=movie.overview%></p>
<p><%=movie.rating%></p>
<%end%>
<%= link_to "Delete list", list_path(@list), method: :delete, class: "btn btn-flat" %>
<%= link_to "My Lists", lists_path, class: "btn btn-flat" %>
<%= link_to "New List", new_list_path, class: "btn btn-flat" %>
